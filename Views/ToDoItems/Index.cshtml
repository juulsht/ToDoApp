@model IEnumerable<ToDoApp.Models.ToDoItem>

@{
    ViewData["Title"] = "ToDo List";
}

<h1 class="page-title">My ToDo List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-create">+ Add New Task</a>
</p>

@if (!Model.Any())
{
    <div class="empty-state">
        <p>No tasks found. Start by adding a new task!</p>
    </div>
}
else
{
    <div class="todo-list">
        @foreach (var item in Model)
        {
            <div class="todo-card @(item.IsComplete ? "completed" : "")">
                <div class="task-info">
                    <h3>@item.Task</h3>
                    <span class="status">@((item.IsComplete) ? "Completed" : "Pending")</span>
                </div>
                <div class="actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Delete</a>
                    }
                </div>
            </div>
        }
    </div>
}

<style>
    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 40px;
    }

    .page-title {
        font-size: 2.8rem;
        color: #2c3e50;
        margin-bottom: 25px;
        font-weight: 700;
        letter-spacing: 1.2px;
    }

    .btn-create {
        background-color: #3498db;
        color: white;
        padding: 12px 25px;
        font-size: 1.1rem;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        display: inline-block;
        margin-bottom: 30px;
        font-weight: 600;
    }

        .btn-create:hover {
            background-color: #2980b9;
        }

    .empty-state {
        font-size: 1.3rem;
        color: #7f8c8d;
        text-align: center;
        margin-top: 50px;
    }

    .todo-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .todo-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px 25px;
        width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.2s ease;
    }

        .todo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

        .todo-card.completed {
            background-color: #d5f5e3;
            border-left: 6px solid #27ae60;
        }

    .task-info h3 {
        margin: 0 0 10px 0;
        font-weight: 700;
        color: #34495e;
        font-size: 1.4rem;
    }

    .status {
        font-weight: 600;
        font-size: 0.9rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .todo-card.completed .status {
        color: #27ae60;
    }

    .actions {
        margin-top: 15px;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.95rem;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.25s ease;
        color: white;
    }

    .btn-edit {
        background-color: #f39c12;
    }

        .btn-edit:hover {
            background-color: #d68910;
        }

    .btn-details {
        background-color: #2980b9;
    }

        .btn-details:hover {
            background-color: #1c5980;
        }

    .btn-delete {
        background-color: #e74c3c;
    }

        .btn-delete:hover {
            background-color: #c0392b;
        }
</style>
